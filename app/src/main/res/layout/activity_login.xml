<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.LoginActivity"
    android:background="@drawable/bg_jpb"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >





        <LinearLayout
            android:background="@drawable/rounded_panel"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_centerVertical="true">

            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtLogin"
                android:hint="@string/login"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:singleLine="true"/>

            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtPassword"
                android:layout_marginTop="5dip"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:singleLine="true"/>
            <!-- Login button -->
            <Button android:id="@+id/btnLogin"
                android:layout_width="fill_parent"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Login"/>

            <Button android:id="@+id/btnRegister"
                android:layout_width="fill_parent"
                android:onClick="register"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Register Candidate"/>

            <Button android:id="@+id/btnRegisterCompany"
                android:layout_width="fill_parent"
                android:onClick="registerCompany"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Register Company"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/progressBar"/>

        </LinearLayout>
        <!-- Login Form Ends -->

    </RelativeLayout>
</ScrollView>